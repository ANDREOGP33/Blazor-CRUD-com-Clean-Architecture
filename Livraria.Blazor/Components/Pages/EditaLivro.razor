@page "/editalivro/{id:int}"

<PageTitle>Editar livro</PageTitle>

<div class="row justify-content-center">
    <div class="col-6">
        <LivroForm ModoEdicao="true" Id="@Id" OnValidaLivroSubimit="EditarLivro" />
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private async Task EditarLivro(Livro livro)
    {
        await livroRepository.Atualizar(livro);
        navigation.NavigateTo("/livros");
    }
}
